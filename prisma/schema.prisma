generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String   @id @default(cuid())
  email              String   @unique
  name               String?
  password           String? // Hashed password for email/password auth
  age                Int?
  interests          String[] // Highly considered in matching
  bio                String? // Blog-style about section
  status             String? // "What I'm doing right now"
  country            String?
  city               String?
  coverImage         String? // Backdrop photo for PendaPass
  favoriteFoods      String[] // Array of favorite foods
  activities         String[] // Array of favorite activities
  placesVisited      String[] // Places the user has been
  placesWishlist     String[] // Places the user wants to go
  pendapassTheme     String?  @default("purple") // Color theme for PendaPass: purple, blue, green, pink, orange, teal
  darkMode           String?  @default("system") // dark, light, or system
  isMinor            Boolean  @default(false)
  isVerified         Boolean  @default(false)
  highScore          Int?     @default(0) // PendaGame high score
  pendaCoins         Int      @default(0) // Penda Coin currency
  stripeCustomerId   String?
  subscriptionId     String?
  subscriptionStatus String?
  image              String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  accounts        Account[]
  sessions        Session[]
  sentMessages    Message[]     @relation("SentMessages")
  penpalsAsUser1  Penpal[]      @relation("User1Penpals")
  penpalsAsUser2  Penpal[]      @relation("User2Penpals")
  waitlist        Waitlist?
  reportsCreated  Report[]      @relation("Reporter")
  reportsReceived Report[]      @relation("Reported")
  dailyStatuses   DailyStatus[]
  ownedLots       Lot[]         @relation("LotOwner")
  sentNotes       NeighborNote[] @relation("SentNotes")
  receivedNotes   NeighborNote[] @relation("ReceivedNotes")
  rapport          Rapport[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Penpal {
  id           String   @id @default(cuid())
  user1Id      String
  user2Id      String
  status       String   @default("active")
  startedAt    DateTime @default(now())
  canCancelAt  DateTime
  cancelledBy  String?
  cancelReason String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user1    User      @relation("User1Penpals", fields: [user1Id], references: [id])
  user2    User      @relation("User2Penpals", fields: [user2Id], references: [id])
  messages Message[]
  reports  Report[]

  @@unique([user1Id, user2Id])
}

model Message {
  id               String    @id @default(cuid())
  penpalId         String
  senderId         String
  content          String
  type             String    @default("text")
  moderationStatus String    @default("approved")
  createdAt        DateTime  @default(now())
  readAt           DateTime?

  penpal Penpal @relation(fields: [penpalId], references: [id], onDelete: Cascade)
  sender User   @relation("SentMessages", fields: [senderId], references: [id])

  @@index([penpalId, createdAt])
}

model Waitlist {
  id        String   @id @default(cuid())
  userId    String   @unique
  isMinor   Boolean
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([isMinor, createdAt])
}

model Report {
  id         String   @id @default(cuid())
  reporterId String
  reportedId String
  penpalId   String
  reason     String
  status     String   @default("pending")
  createdAt  DateTime @default(now())

  reporter User   @relation("Reporter", fields: [reporterId], references: [id])
  reported User   @relation("Reported", fields: [reportedId], references: [id])
  penpal   Penpal @relation(fields: [penpalId], references: [id])
}

model Sticker {
  id       String @id @default(cuid())
  name     String
  imageUrl String
  category String @default("default")
}

model DailyStatus {
  id        String   @id @default(cuid())
  userId    String
  content   String
  mediaUrl  String? // Photo or video URL
  mediaType String? // "image" or "video"
  date      DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date]) // One status per user per day
  @@index([userId, date])
}

model Lot {
  id            String   @id @default(cuid())
  villageId     String
  villageName   String   // Village name for address uniqueness
  gridX         Int
  gridZ         Int
  address       String   @unique // Globally unique address like "123 Main St, Panda Village"
  cost          Int      // Cost in penda coins
  isRoad        Boolean  @default(false) // Roads cannot be built on
  isPathway     Boolean  @default(false) // Pathways cannot be built on
  isPark        Boolean  @default(false) // Parks cannot be built on
  isApartmentZone Boolean @default(false) // Can build vertically up to 4 floors
  ownerId       String?
  houseType     String?  // "basic", "mansion", "business"
  floorCount    Int      @default(1) // For apartment zones, 1-4
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  owner User? @relation("LotOwner", fields: [ownerId], references: [id])

  @@unique([villageId, gridX, gridZ])
  @@index([villageId])
  @@index([ownerId])
  @@index([address])
}

model NeighborNote {
  id            String   @id @default(cuid())
  senderId      String
  receiverId    String
  villageId     String
  villageName   String
  message       String?  // Optional message
  present       String?  // Optional gifted item (e.g., "flower", "cookie")
  pendaCoins    Int      @default(0) // Penda coins gifted (0 if none)
  date          DateTime @default(now()) // Date the note was sent
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  sender   User @relation("SentNotes", fields: [senderId], references: [id], onDelete: Cascade)
  receiver User @relation("ReceivedNotes", fields: [receiverId], references: [id], onDelete: Cascade)

  @@unique([senderId, receiverId, date]) // One note per sender-receiver pair per day
  @@index([villageId])
  @@index([receiverId, date])
  @@index([senderId, date])
}

model Rapport {
  id          String   @id @default(cuid())
  userId      String
  villageId   String
  villageName String
  score       Int      @default(0) // Reputation score in this village
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, villageId]) // One rapport record per user per village
  @@index([villageId, score])
  @@index([userId])
}

model ScavengeSpot {
  id          String   @id @default(cuid())
  date        DateTime @default(now()) // Date for which this spot is active
  positionX   Float    // 3D position on planet
  positionY   Float
  positionZ   Float
  emoji       String   @default("üîç") // Emoji marker
  createdAt   DateTime @default(now())

  @@unique([date, positionX, positionY, positionZ]) // One spot per position per day
  @@index([date])
}
