generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String    @id @default(cuid())
  email             String    @unique
  name              String?
  age               Int?
  interests         String[]
  isMinor           Boolean   @default(false)
  isVerified        Boolean   @default(false)
  stripeCustomerId  String?
  subscriptionId    String?
  subscriptionStatus String?
  image             String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  accounts          Account[]
  sessions          Session[]
  sentMessages      Message[] @relation("SentMessages")
  penpalsAsUser1    Penpal[]  @relation("User1Penpals")
  penpalsAsUser2    Penpal[]  @relation("User2Penpals")
  waitlist          Waitlist?
  reportsCreated    Report[]  @relation("Reporter")
  reportsReceived   Report[]  @relation("Reported")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Penpal {
  id          String   @id @default(cuid())
  user1Id     String
  user2Id     String
  status      String   @default("active")
  startedAt   DateTime @default(now())
  canCancelAt DateTime
  cancelledBy String?
  cancelReason String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user1    User      @relation("User1Penpals", fields: [user1Id], references: [id])
  user2    User      @relation("User2Penpals", fields: [user2Id], references: [id])
  messages Message[]
  reports  Report[]

  @@unique([user1Id, user2Id])
}

model Message {
  id               String    @id @default(cuid())
  penpalId         String
  senderId         String
  content          String
  type             String    @default("text")
  moderationStatus String    @default("approved")
  createdAt        DateTime  @default(now())
  readAt           DateTime?

  penpal Penpal @relation(fields: [penpalId], references: [id], onDelete: Cascade)
  sender User   @relation("SentMessages", fields: [senderId], references: [id])

  @@index([penpalId, createdAt])
}

model Waitlist {
  id        String   @id @default(cuid())
  userId    String   @unique
  isMinor   Boolean
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([isMinor, createdAt])
}

model Report {
  id           String   @id @default(cuid())
  reporterId   String
  reportedId   String
  penpalId     String
  reason       String
  status       String   @default("pending")
  createdAt    DateTime @default(now())

  reporter User   @relation("Reporter", fields: [reporterId], references: [id])
  reported User   @relation("Reported", fields: [reportedId], references: [id])
  penpal   Penpal @relation(fields: [penpalId], references: [id])
}

model Sticker {
  id       String @id @default(cuid())
  name     String
  imageUrl String
  category String @default("default")
}
